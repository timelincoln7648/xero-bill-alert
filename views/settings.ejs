<% include partials/header %>

<div class="container main">

<div class="ui main text container segment">
      <div  class="ui mainBox huge header">Settings</div>
</div>

<br>
<h2>
    Xero
</h2>
<br>


<% if (connectionStatus) { %>
    <div id="smallBox" class="ui success message">
      <div class="header">
        Status
      </div>
      <p><i class="check icon"></i>  Connected to <%= orgName %>  </p>
    </div>
    <div>
        <p>
            <a href="/disconnectXero">Disconnect from Xero</a>
        </p>
    </div>
<% } else { %>
    <div id="smallBox" class="ui negative message">
      <div class="header">
        Status
      </div>
      <p><i class="close icon"></i> Disconnected</p>
    </div>
    <br>
    <div>
        <p>
        <a href="/connectXero">
        <img border="0" alt="W3Schools" src="https://developer.xero.com/static/images/documentation/connect_xero_button_white_2x.png" width="200">
        </a>
        </p>
    </div>
<% } %>


<br>
<hr>
<br>
<div style="width: 40%;">

    <h3>
        You'll receive a text notification when new bills are made in Xero with more than this amount due.
    </h3>
</div>
<br>
<br>


    <form id="myForm" class="ui form"  action="/saveAmountLimit" method="post">
        <div id="moneyField" class="ui right labeled input">
          <label for="amount" class="ui label">$</label>
          <input type="text" id="amount" placeholder="<%= currentAmountLimit %>" name="amount" >
          <div class="ui basic label">.00</div>
          
        </div>
    </form>  
    <input id="saveButton" type="submit" form="myForm" value="Save" class="ui green button"/>

    


<br>
<br>
<br>
<hr>
<br>



<% if (locals.userLoggedIn) { %> 

    <p>
        <a class="ui red button" href="/logout">Logout</a>
    </p>

<% } %>


<br>
<br>
<br>

</div>

