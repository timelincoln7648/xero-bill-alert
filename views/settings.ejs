<% include partials/header %>

<div class="container main">

<div class="ui main text container segment">
    <div id="mainBox" class="ui huge header">Settings</div>
</div>

<br>
<h2>
    Xero
</h2>
<br>


<% if (connectionStatus) { %>
    <div id="smallBox" class="ui success message">
      <div class="header">
        Status
      </div>
      <p><i class="check icon"></i>  Connected to <%= orgName %>  </p>
    </div>
    <div>
        <p>
            <a href="/disconnectXero">Disconnect from Xero</a>
        </p>
    </div>
<% } else { %>
    <div id="smallBox" class="ui negative message">
      <div class="header">
        Status
      </div>
      <p><i class="close icon"></i> Disconnected</p>
    </div>
    <br>
    <div>
        <p>
        <a href="/connectXero">
        <img border="0" alt="W3Schools" src="https://developer.xero.com/static/images/documentation/connect_xero_button_white_2x.png" width="200">
        </a>
        </p>
    </div>
<% } %>


<br>
<hr>
<br>
<h2>
    <a href="/testFeature">Test Feature</a>
</h2>
<br>
<br>
<hr>
<br>
<br>


<% if (locals.userLoggedIn) { %> 

    <p>
        <a class="ui red button" href="/logout">Logout</a>
    </p>

<% } %>

</div>

<% include partials/footer %>